# AI Abuse Hotline - Environment Variables
# Copy this to .env and fill in your values

# =============================================================================
# REQUIRED
# =============================================================================

# Admin API authentication token (generate a secure random string)
ADMIN_TOKEN=

# =============================================================================
# OPTIONAL
# =============================================================================

# Server settings (defaults shown)
HOST=127.0.0.1
PORT=3000

# Database path (defaults to ./data/hotline.db)
DB_PATH=./data/hotline.db

# ntfy.sh topic for push notifications (e.g., aiabusehotline-alerts)
NTFY_TOPIC=

# Max request body size in bytes (default: 1MB)
MAX_BODY_SIZE=1048576
